{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": false
  },
  "include": ["src"]
}
